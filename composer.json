{
    "name": "koenvanmeijeren/wijdthemuwkunst",
    "license": "private",
    "authors": [
        {
            "name": "Koen van Meijeren",
            "role": "developer"
        }
    ],
    "autoload": {
        "files": [
            "config/const.php",
            "App/Support/Functions/autoload.php"
        ],
        "psr-4": {
            "App\\": "App/",
            "Domain\\": "App/Domain/",
            "Src\\": "App/Src/",
            "Support\\": "App/Support/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.4",
            "ext-iconv": "1.16",
            "ext-intl": "65.1",
            "ext-json": "1.0",
            "ext-pdo": "1.0"
        },
        "platform-dev": {
            "ext-xdebug": "2.8.0"
        }
    },
    "require": {
        "cakephp/chronos": "^2.0.1",
        "defuse/php-encryption": "^2.2.1",
        "filp/whoops": "^2.7.1",
        "kminek/email-obfuscator": "^1.0.1",
        "monolog/monolog": "^2.0.2",
        "paragonie/anti-csrf": "^2.2.1",
        "phpmailer/phpmailer": "^6.1",
        "siriusphp/upload": "^2.1.1",
        "symfony/filesystem": "^4.4.4",
        "symfony/templating": "^4.4.4",
        "vlucas/phpdotenv": "^4.1.0"
    },
    "require-dev": {
        "bmitch/churn-php": "^1.0.3",
        "daniel-werner/php-quality-tools": "^1.1.0",
        "ergebnis/phpstan-rules": "^0.13.0",
        "php-coveralls/php-coveralls": "^2.2.0",
        "phploc/phploc": "^5.0.0",
        "phpmd/phpmd": "^2.8.1",
        "phpmetrics/phpmetrics": "^2.5.0",
        "phpstan/phpstan-deprecation-rules": "^0.11.2",
        "phpstan/phpstan-strict-rules": "^0.11.1",
        "roave/security-advisories": "dev-master",
        "sebastian/phpcpd": "^4.1.0",
        "thecodingmachine/phpstan-strict-rules": "^0.11.2"
    },
    "prefer-stable": true,
    "minimum-stability": "stable",
    "scripts": {
        "app-up": [
            "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d"
        ],
        "app-stop": [
            "docker-compose -f docker-compose.yml -f docker-compose.dev.yml stop"
        ],
        "inspect": [
            "phpcs app",
            "phpcpd app",
            "phpmnd app",
            "phpstan analyse -c phpstan.neon"
        ],
        "inspect-fix": [
            "php-cs-fixer fix app",
            "phpcbf app"
        ],
        "phpcs": [
            "phpcs app"
        ],
        "phpmd": [
            "phpmd app html phpmd.xml --reportfile web/phpmd/index.html"
        ],
        "phpstan": [
            "phpstan analyse -c phpstan.neon"
        ],
        "insights": [
            "phploc app",
            "phpmetrics --report-html=web/phpmetrics app",
            "phpmd app html phpmd.xml --reportfile web/phpmd/index.html"
        ]
    }
}
