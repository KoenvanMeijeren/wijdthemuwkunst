{
    "name": "koenvanmeijeren/wijdthemuwkunst",
    "license": "proprietary",
    "authors": [
        {
            "name": "Koen van Meijeren",
            "role": "developer"
        }
    ],
    "autoload": {
        "files": [
            "config/const.php",
            "src/Components/Functions/autoload.php"
        ],
        "psr-4": {
            "Domain\\": "src/Domain/",
            "Components\\": "src/Components/",
            "Src\\": "src/Src/",
            "Modules\\": "src/Modules/",
            "System\\": "src/System/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0",
            "ext-iconv": "1.16",
            "ext-intl": "65.1"
        },
        "platform-dev": {
            "ext-xdebug": "2.8.0"
        }
    },
    "require": {
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "cakephp/chronos": "^2.2",
        "defuse/php-encryption": "^2.3",
        "filp/whoops": "^2.14",
        "google/recaptcha": "^1.2",
        "kminek/email-obfuscator": "^1.1",
        "monolog/monolog": "^2.3",
        "paragonie/anti-csrf": "^2.3",
        "phpmailer/phpmailer": "^6.5",
        "siriusphp/upload": "^3.0",
        "symfony/filesystem": "^5.3",
        "symfony/templating": "^5.3",
        "vlucas/phpdotenv": "^5.3"
    },
    "require-dev": {
        "bmitch/churn-php": "^1.5",
        "daniel-werner/php-quality-tools": "^1.2",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.6",
        "drupal/coder": "^8.3",
        "phploc/phploc": "^7.0",
        "phpmd/phpmd": "^2.10",
        "phpmetrics/phpmetrics": "^2.7",
        "phpstan/phpstan": "^0.12",
        "roave/security-advisories": "dev-latest",
        "sebastian/phpcpd": "^6.0",
        "symfony/var-dumper": "^5.3"
    },
    "prefer-stable": true,
    "minimum-stability": "stable",
    "scripts": {
        "start": [
            "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d"
        ],
        "stop": [
            "docker-compose -f docker-compose.yml -f docker-compose.dev.yml stop"
        ],
        "inspect": [
            "vendor/bin/phpcs --standard=Drupal --extensions=php --ignore=view.php src",
            "vendor/bin/phpcpd src",
            "vendor/bin/phpmd src text phpmd.xml"
        ],
        "inspect-fix": [
            "vendor/bin/phpcbf --standard=Drupal --extensions=php --ignore=view.php src"
        ],
        "insights": [
            "vendor/bin/phploc src",
            "vendor/bin/phpmetrics --report-html=public_html/phpmetrics src",
            "vendor/bin/phpstan analyse -c phpstan.neon"
        ]
    }
}
