{
    "name": "koenvanmeijeren/wijdthemuwkunst",
    "license": "proprietary",
    "authors": [
        {
            "name": "Koen van Meijeren",
            "role": "developer"
        }
    ],
    "autoload": {
        "files": [
            "config/const.php",
            "src/Components/Functions/autoload.php"
        ],
        "psr-4": {
            "Domain\\": "src/Domain/",
            "Components\\": "src/Components/",
            "Src\\": "src/Src/",
            "Modules\\": "src/Modules/",
            "System\\": "src/System/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.0",
            "ext-iconv": "1.16",
            "ext-intl": "65.1"
        },
        "platform-dev": {
            "ext-xdebug": "2.8.0"
        }
    },
    "require": {
        "ext-iconv": "*",
        "ext-intl": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "cakephp/chronos": "^2.2.1",
        "defuse/php-encryption": "^2.3.1",
        "filp/whoops": "^2.14.1",
        "google/recaptcha": "^1.2.4",
        "kminek/email-obfuscator": "^1.1.0",
        "monolog/monolog": "^2.3.2",
        "paragonie/anti-csrf": "^2.3.0",
        "phpmailer/phpmailer": "^6.5.1",
        "siriusphp/upload": "^3.0.1",
        "symfony/filesystem": "^4.4.27",
        "symfony/templating": "^4.4.30",
        "vlucas/phpdotenv": "^4.2.0"
    },
    "require-dev": {
        "bmitch/churn-php": "^1.5.0",
        "daniel-werner/php-quality-tools": "^1.2.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.6.2",
        "drupal/coder": "^8.3.13",
        "phploc/phploc": "^5.0.0",
        "phpmd/phpmd": "^2.9.1",
        "phpmetrics/phpmetrics": "^2.7.4",
        "phpstan/phpstan": "^0.12.96",
        "roave/security-advisories": "dev-master",
        "sebastian/phpcpd": "^4.1.0",
        "symfony/var-dumper": "^4.4.30"
    },
    "prefer-stable": true,
    "minimum-stability": "stable",
    "scripts": {
        "start": [
            "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d"
        ],
        "stop": [
            "docker-compose -f docker-compose.yml -f docker-compose.dev.yml stop"
        ],
        "inspect": [
          "vendor/bin/phpcs --standard=Drupal --extensions=php --ignore=view.php src/Modules/Text",
            "vendor/bin/phpcpd app",
            "vendor/bin/phpmd app text phpmd.xml"
        ],
        "inspect-fix": [
            "vendor/bin/phpcbf --standard=Drupal --extensions=php --ignore=view.php app"
        ],
        "insights": [
            "vendor/bin/phploc app",
            "vendor/bin/phpmetrics --report-html=public_html/phpmetrics app",
            "vendor/bin/phpstan analyse -c phpstan.neon"
        ]
    }
}
